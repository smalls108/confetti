<div class="container w-60vw">
<h2 class="text-center mt-1 mb-3">Your Bookings</h2>
<% @renter_pending_bookings.each do |booking| %>
  <%= render 'bookings/card', booking: booking, owner: false%>
<% end %>

<h2 class="text-center mt-1 mb-3">Upcoming Bookings</h2>
<% @owner_bookings.each do |booking| %>
  <%= render 'bookings/card', booking: booking, owner: true %>
<% end %>

<h2 class="text-center mt-1 mb-3">Completed Bookings</h2>
<% @renter_completed_bookings.each do |booking| %>
  <%= render 'bookings/card', booking: booking, owner: false %>
<% end %>
</div>

