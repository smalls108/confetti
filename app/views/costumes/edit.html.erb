<h1>Edit the costume</h1>

<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <%= simple_form_for  @restaurant  do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :size %>
        
        <%= f.submit "create resto", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
